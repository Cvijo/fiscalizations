<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFrameworks>net472;netcoreapp3.1</TargetFrameworks>
        <Authors>Mews</Authors>
        <Copyright>Mews</Copyright>
        <PackageProjectUrl>https://github.com/MewsSystems/fiscalization-core</PackageProjectUrl>
        <RepositoryUrl>https://github.com/MewsSystems/fiscalization-core</RepositoryUrl>
        <RepositoryType>Git</RepositoryType>
        <PackageTags>fiscalization core</PackageTags>
        <PackageLicenseUrl>https://github.com/MewsSystems/fiscalization-core/blob/master/LICENSE</PackageLicenseUrl>
        <LangVersion>8.0</LangVersion>
        <PackageVersion>1.0.0</PackageVersion>
        <PackageOutputPath>bin</PackageOutputPath>
        <Version>1.0.0</Version>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

  <Target Name="CustomPack" AfterTargets="build" Condition="'$(Configuration)'=='Release'">
    <Message Text="Custom Pack command starts ..." Importance="high"/>
    <Exec Command="nuget pack $(MSBuildProjectFile) -Properties Configuration=Release"/>
  </Target>

    <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
      <OutputPath>bin\</OutputPath>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="FuncSharp" Version="[1.7.1]" />
    </ItemGroup>
</Project>
